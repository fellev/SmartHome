class tadiran_multi
{
    typedef enum 
    {
        OFF,
        ON
    } tmulti_power_te;
    
    typedef enum 
    {
        AUTO,
        COOL,
        DRY,
        FAN,
        HEAT
    } tmulti_mode_te; 
    
    public:
        tmulti_power_te        power;        // On, Off
        unsigned int           fan;          // 0-Auto, 1-3 Speed   
        unsigned int           temperature;  // Temperature range 16-30 degrees
        tmulti_mode_te         mode;         // Select the mode    
};


