                sendCommand( LIVINGROOM_Light_RGB_Preset1, "ON")
            }
            else
            {
                sendCommand( LIVINGROOM_Light_RGB_Preset1, "OFF")
            }
        }
        case "DOUBLE_PRESSED": {
            //<ACTION>
        }
        case "LONG_PRESSED": {
            f_turnOffAll.apply()
        }
        case "LONG_RELEASED": {
            //<ACTION>
        }
    }
end

